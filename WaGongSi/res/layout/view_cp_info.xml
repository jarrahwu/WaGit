<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dip"
    android:background="@drawable/bg_cp_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/cpName"
        style="@style/CpDesc" />

    <TextView
        android:id="@+id/cpPrjDesc"
        style="@style/CpDesc" />

    <TextView
        android:id="@+id/cpDreamBg"
        style="@style/CpDesc" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/cpCommentCount"
            style="@style/CpCount"
            android:layout_gravity="left|center_vertical" />

        <ImageView
            android:contentDescription="@string/app_name"
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/cpLikeCount"
                android:layout_marginRight="7dip"
                style="@style/CpCount" />

            <Button
                android:id="@+id/btnLike"
                android:gravity="center"
                android:layout_width="65dip"
                android:layout_height="30dip"
                android:background="@drawable/shape_rectangle_grey"
                android:textColor="#fff"
                android:text="@string/wa" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>